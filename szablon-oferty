    <script>
        const formatCurrency = (value) => value.toLocaleString('pl-PL', { style: 'currency', currency: 'PLN' });

        const chartTextColor = '#CCD6F6';
        const chartGridColor = 'rgba(204, 214, 246, 0.2)';
        let benefitChart, investmentChart;

        function initializeCharts() {
            const benefitCompositionCtx = document.getElementById('benefitCompositionChart').getContext('2d');
            benefitChart = new Chart(benefitCompositionCtx, {
                type: 'doughnut', data: { labels: [], datasets: [{ data: [], backgroundColor: ['#64FFDA', '#FFC107', '#E03616'], borderColor: '#0A192F', borderWidth: 4, hoverOffset: 8 }] },
                options: { responsive: true, maintainAspectRatio: false, cutout: '60%', plugins: { legend: { position: 'bottom', labels: { color: chartTextColor } } } }
            });

            const investmentVsProfitCtx = document.getElementById('investmentVsProfitChart').getContext('2d');
            investmentChart = new Chart(investmentVsProfitCtx, {
                type: 'bar', data: { labels: ['Inwestycja', 'Potencjalna Korzyść'], datasets: [{ data: [], backgroundColor: ['#E03616', '#64FFDA'], borderWidth: 1, borderRadius: 5 }] },
                options: { responsive: true, maintainAspectRatio: false, indexAxis: 'y', scales: { x: { beginAtZero: true, ticks: { color: chartTextColor, callback: (v) => formatCurrency(v) }, grid: { color: chartGridColor } }, y: { ticks: { color: chartTextColor }, grid: { color: 'transparent' } } }, plugins: { legend: { display: false } } }
            });
        }

        let currentDuration = '1';
        const durationButtons = document.querySelectorAll('.duration-btn');
        const allTables = document.querySelectorAll('.table-content');
        
        function calculateAndDisplay(params) {
            const wps = parseFloat(params.get('wps'));
            const savings = parseFloat(params.get('savings'));
            const upfrontFee = parseFloat(params.get('upfrontFee'));
            const successFeePerc = parseFloat(params.get('successFee'));
            const gender = params.get('gender');

            const genderForms = {
                'Pani': { base: 'Pani', dopelniacz: 'Pani', celownik: 'Pani', dopelniaczUpper: 'PANI' },
                'Pana': { base: 'Pan', dopelniacz: 'Pana', celownik: 'Panu', dopelniaczUpper: 'PANA' }
            };
            const selectedGender = genderForms[gender];

            document.querySelectorAll('.gender-text').forEach(el => el.textContent = selectedGender.base);
            document.querySelectorAll('.gender-text-dopelniacz').forEach(el => el.textContent = selectedGender.dopelniacz);
            document.querySelectorAll('.gender-text-celownik').forEach(el => el.textContent = selectedGender.celownik);
            document.querySelectorAll('.gender-text-dopelniacz-upper').forEach(el => el.textContent = selectedGender.dopelniaczUpper);

            const interest1Y = wps * 0.105;
            const interest2Y = wps * 0.105 * 2;
            const fee2nd = 922.50;

            const totalBenefit1Y = wps + savings + interest1Y;
            const successFeeAmount1Y = totalBenefit1Y * (successFeePerc / 100);
            const netProfit1Y = totalBenefit1Y - upfrontFee - fee2nd - successFeeAmount1Y;

            const totalBenefit2Y = wps + savings + interest2Y;
            const successFeeAmount2Y = totalBenefit2Y * (successFeePerc / 100);
            const netProfit2Y = totalBenefit2Y - upfrontFee - fee2nd - successFeeAmount2Y;

            document.getElementById('wps-val').textContent = formatCurrency(wps);
            document.getElementById('savings-val').textContent = formatCurrency(savings);

            // Table 1 Year
            document.getElementById('upfront-fee-val-1').textContent = formatCurrency(upfrontFee);
            document.getElementById('success-fee-val-1').textContent = `${successFeePerc}%`;
            document.getElementById('wps-val-t1').textContent = formatCurrency(wps);
            document.getElementById('savings-val-t1').textContent = formatCurrency(savings);
            document.getElementById('interest-val-t1').textContent = formatCurrency(interest1Y);
            document.getElementById('total-benefit-val-t1').textContent = formatCurrency(totalBenefit1Y);
            document.getElementById('upfront-fee-val-t1').textContent = formatCurrency(upfrontFee);
            document.getElementById('success-fee-perc-t1').textContent = `${successFeePerc}%`;
            document.getElementById('success-fee-amount-t1').textContent = formatCurrency(successFeeAmount1Y);
            document.getElementById('net-profit-val-t1').textContent = formatCurrency(netProfit1Y);

            // Table 2 Years
            document.getElementById('upfront-fee-val-2').textContent = formatCurrency(upfrontFee);
            document.getElementById('success-fee-val-2').textContent = `${successFeePerc}%`;
            document.getElementById('wps-val-t2').textContent = formatCurrency(wps);
            document.getElementById('savings-val-t2').textContent = formatCurrency(savings);
            document.getElementById('interest-val-t2').textContent = formatCurrency(interest2Y);
            document.getElementById('total-benefit-val-t2').textContent = formatCurrency(totalBenefit2Y);
            document.getElementById('upfront-fee-val-t2').textContent = formatCurrency(upfrontFee);
            document.getElementById('success-fee-perc-t2').textContent = `${successFeePerc}%`;
            document.getElementById('success-fee-amount-t2').textContent = formatCurrency(successFeeAmount2Y);
            document.getElementById('net-profit-val-t2').textContent = formatCurrency(netProfit2Y);
            
            // Installments
            document.getElementById('upfront-fee-val-installments').textContent = formatCurrency(upfrontFee);
            document.getElementById('installment-5').textContent = formatCurrency(upfrontFee / 5);
            document.getElementById('installment-10').textContent = formatCurrency(upfrontFee / 10);
            document.getElementById('installment-20').textContent = formatCurrency(upfrontFee / 20);

            updateCharts();
        }
        
        function updateCharts() {
            allTables.forEach(table => table.classList.remove('active'));
            const activeTableId = `table-${currentDuration}`;
            const activeTable = document.getElementById(activeTableId);
            if (activeTable) activeTable.classList.add('active');
            
            const urlParams = new URLSearchParams(window.location.search);
            const wps = parseFloat(urlParams.get('wps'));
            const savings = parseFloat(urlParams.get('savings'));
            const upfrontFee = parseFloat(urlParams.get('upfrontFee'));

            const interest1Y = wps * 0.105;
            const interest2Y = wps * 0.105 * 2;
            
            const totalBenefit1Y = wps + savings + interest1Y;
            const totalBenefit2Y = wps + savings + interest2Y;

            const newPotentialProfit = currentDuration === '1' ? totalBenefit1Y : totalBenefit2Y;

            investmentChart.data.datasets[0].data = [upfrontFee, newPotentialProfit];
            investmentChart.update();
            
            const newInterest = currentDuration === '1' ? interest1Y : interest2Y;
            benefitChart.data.labels = ['Zwrot kosztów (WPS)', 'Oszczędność na ratach', `Odsetki Karne (po ${currentDuration} ${currentDuration === '1' ? 'roku' : 'latach'})`];
            benefitChart.data.datasets[0].data = [wps, savings, newInterest];
            benefitChart.update();
        }

        durationButtons.forEach(button => {
            button.addEventListener('click', () => {
                durationButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                currentDuration = button.dataset.duration;
                updateCharts();
            });
        });

        window.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('wps')) {
                initializeCharts();
                calculateAndDisplay(urlParams);
            } else {
                // This should not happen if the generator is used correctly,
                // but as a fallback, we can show an error or a default message.
                document.body.innerHTML = '<h1 class="text-white text-center text-2xl p-8">Błąd: Brak danych do wygenerowania oferty.</h1>';
            }
        });

    </script>
</body>
</html>
